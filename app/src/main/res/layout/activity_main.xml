<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <View
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_shape"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/top_view"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="-50dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="12dp"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/attendenceBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_people_24"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendence"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="12dp"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/messagePage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_message_24"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Message"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <androidx.cardview.widget.CardView
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="12dp"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ViewUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_manage_accounts_24"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Activity"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="12dp"
                        android:layout_margin="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/insertUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_add_circle_24"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Insert Activity"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <androidx.cardview.widget.CardView
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="12dp"
                        android:layout_margin="15dp"
                        >

                        <LinearLayout
                            android:id="@+id/liveLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/baseline_location_on_24"
                                android:layout_gravity="center_horizontal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live Location"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/dashboardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Dashboard"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                />

            <ImageView
                android:id="@+id/apbn12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/apbn"
                 />

            <ImageView
                android:id="@+id/userImageInfo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="7dp"
                app:srcCompat="@drawable/user_image" />

        </RelativeLayout>


    </ScrollView>


</LinearLayout>